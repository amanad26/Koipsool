<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/memebr_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/boardergraybackground"
            android:fontFamily="@font/roboto_medium"
            android:textFontWeight="600"
            android:hint="Ritesh Kumar"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />
        <RelativeLayout
            android:background="@drawable/boardergraybackground"
            android:layout_width="match_parent"
            android:padding="@dimen/_2sdp"
            android:layout_margin="@dimen/_8sdp"
            android:layout_height="@dimen/_40sdp">

            <EditText
                android:id="@+id/member_department"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:hint="Department"
                android:paddingLeft="@dimen/_15sdp"
                android:textSize="@dimen/_13sdp" />

<!--            <com.jaredrummler.materialspinner.MaterialSpinner-->
<!--                android:id="@+id/department_spinner"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentStart="true"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_centerInParent="true"-->
<!--                android:fontFamily="@font/roboto_medium"-->
<!--                android:text="Department"-->
<!--                android:textSize="@dimen/_13sdp" />-->

        </RelativeLayout>

        <EditText
            android:id="@+id/member_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/boardergraybackground"
            android:fontFamily="@font/roboto_medium"
            android:hint="Work Role"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

        <EditText
            android:visibility="gone"
            android:id="@+id/member_candidate_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:background="@drawable/boardergraybackground"
            android:fontFamily="@font/roboto_medium"
            android:hint="Candidate Id (optional)"
            android:paddingHorizontal="@dimen/_8sdp"
            android:paddingVertical="@dimen/_10sdp"
            android:paddingBottom="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/save_btn"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center"
        app:cardCornerRadius="@dimen/_25sdp"
        android:backgroundTint="@color/ightblue">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_gravity="center"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>