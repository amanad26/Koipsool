<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <com.skydoves.elasticviews.ElasticCardView
        android:id="@+id/my_bids_cardView"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/_3sdp"
        android:layout_marginHorizontal="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_4sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdpq">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/my_bids_linear"
                android:weightSum="2"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/_5sdpq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_weight="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdpq">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/my_member_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_5sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dummyuser"
                            app:cardCornerRadius="@dimen/_10sdpq"
                            app:riv_corner_radius="10dp">


                        </com.makeramen.roundedimageview.RoundedImageView>





                    </RelativeLayout>



                </RelativeLayout>

                <LinearLayout
                    android:layout_weight=".7"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_member_name"
                        android:textColor="@color/black"
                        android:text="Ritesh Kumar"
                        android:textSize="@dimen/_14sdp"
                        android:maxLines="2"
                        android:fontFamily="@font/roboto_medium"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp"
                            android:text="Department: "/>
                        <TextView
                            android:id="@+id/my_member_department"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text=" Sals"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />



                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp"
                            android:text="Location : "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text=" Pune"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp"
                            android:text="Work: "/>
                        <TextView
                            android:id="@+id/my_member_work_role"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/roboto_regular"
                            android:text=" Generate Bi"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/_12sdp" />



                    </LinearLayout>


                    <View
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/grey_600"/>



                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:weightSum="2"
                android:layout_marginTop="@dimen/_7sdpq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/edit_role"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdpq"
                    android:background="@drawable/greenboarder"
                    android:drawablePadding="@dimen/_5sdpq"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="Edit Role"
                    android:textColor="#36B558"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:id="@+id/my_member_remove"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdpq"
                    android:background="@drawable/greenbackground"
                    android:drawablePadding="@dimen/_5sdpq"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text="Remove"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>
        </LinearLayout>
    </com.skydoves.elasticviews.ElasticCardView>

</LinearLayout>