<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pharma.UpdateJobdetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/gradient_background_new">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="@dimen/_60sdpq"
                android:layout_height="match_parent"
                android:contentDescription="@string/ic_back"
                android:padding="@dimen/_15sdpq"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_medium"
                android:text="Update Job Details"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp" />

        </RelativeLayout>




        <LinearLayout
            android:id="@+id/layout_job"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/_8sdp"
                android:text="Job Details"
                android:textColor="@color/text_form"
                android:textSize="@dimen/_16sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/boardergraybackgrounds"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Job Title"
                        android:textColor="@color/black_brown"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/post_job_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="e.g. Android app development"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Minimum Experience"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/boardergraybackground"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Spinner
                            android:id="@+id/job_experiance_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:outlineSpotShadowColor="@color/black" />


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Skills required "
                    android:textColor="@color/black_brown"
                    android:textSize="@dimen/_13sdp" />


                <TextView
                    android:id="@+id/job_skills_req"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/boardergraybackground"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="e.g. Android app development"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:textColor="@color/edttxt_color"
                    android:textSize="@dimen/_13sdp" />


                <LinearLayout
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/selected_skills_recycler"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Job type"
                        android:textColor="@color/black_brown"
                        android:textSize="@dimen/_13sdp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <RadioGroup
                            android:id="@+id/job_type_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="vertical"
                            android:paddingRight="@dimen/_10sdp">

                            <RadioButton
                                android:id="@+id/radioInoffice_l2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In office"
                                android:textColor="@color/lightsblack"
                                android:textSize="@dimen/_13sdp" />

                            <RadioButton
                                android:id="@+id/radioRemote_l2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Remote"
                                android:textColor="@color/lightsblack"
                                android:textSize="@dimen/_13sdp" />

                        </RadioGroup>

                    </RelativeLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Number of Openings"
                    android:textColor="@color/black_brown"
                    android:textSize="@dimen/_13sdp" />


                <EditText
                    android:id="@+id/post_job_number_of_opening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/boardergraybackground"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="e.g. Android app development"
                    android:paddingHorizontal="@dimen/_8sdp"
                    android:inputType="number"
                    android:paddingVertical="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Job description"
                    android:textColor="@color/black_brown"
                    android:textSize="@dimen/_13sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/boardergraybackground"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp">

                    <EditText
                        android:layout_margin="@dimen/_3sdp"
                        android:padding="@dimen/_10sdp"
                        android:background="@color/white"
                        android:hint="Job responsibilities"
                        android:layout_width="match_parent"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:id="@+id/post_job_resposibility"/>


                </LinearLayout>

                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:paddingBottom="@dimen/_10sdp"
                     android:orientation="vertical">

                     <CheckBox
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text=" Allow applications from women also who \n are willing to start/restart their career."
                         android:textSize="@dimen/_13sdp"
                         android:lineSpacingExtra="1dp"
                         android:fontFamily="@font/roboto_regular"
                         android:textColor="@color/lightsblack"
                         android:paddingBottom="@dimen/_5sdp"
                         android:layout_marginLeft="@dimen/_10sdp"/>

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Know More"
                         android:textSize="@dimen/_13sdp"
                         android:fontFamily="@font/roboto_regular"
                         android:textColor="@color/ightblue"
                         android:layout_marginBottom="@dimen/_10sdp"
                         android:layout_marginLeft="@dimen/_35sdp"/>


                 </LinearLayout>-->


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/_8sdp"
                android:text="Salary and perks"
                android:textColor="@color/text_form"
                android:textSize="@dimen/_16sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/boardergraybackgrounds"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="CTC (optional):"
                        android:textColor="@color/black_brown"
                        android:textSize="@dimen/_13sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp"
                        android:weightSum="2">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:background="@drawable/boardergraybackground">

                            <EditText
                                android:id="@+id/post_job_salery_start"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:background="@color/white"
                                android:hint="e.g.5.2"
                                android:paddingLeft="@dimen/_15sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="to"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:background="@drawable/boardergraybackground">

                            <EditText
                                android:id="@+id/post_job_salery_end"
                                android:layout_margin="@dimen/_2sdp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:hint="e.g.5.2"
                                android:background="@color/white"
                                android:paddingLeft="@dimen/_15sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />


                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="LPA"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="CTC breakup"
                        android:textColor="@color/black_brown"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="1dp"
                        android:text="Transparent CTC breakup attracts top condidates"
                        android:textColor="@color/lightsblack"
                        android:textSize="@dimen/_13sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/boardergraybackground"
                        android:padding="@dimen/_5sdp">

                        <RadioGroup
                            android:id="@+id/job_radio_gounp_ctc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:paddingRight="@dimen/_10sdp">

                            <RadioButton
                                android:id="@+id/job_radio_percent_ctc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="In %"
                                android:textSize="@dimen/_13sdp" />

                            <RadioButton
                                android:id="@+id/job_radio_lpa_ctc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" In LPA"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />


                        </RadioGroup>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Fixed pay"
                        android:textColor="@color/black_brown"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="1dp"
                        android:text="Fixed pay is the fixed component of the CTC"
                        android:textColor="@color/lightsblack"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/job_fixed_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="e.g. 5.2"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Variable pay (optional)"
                        android:textColor="@color/black_brown"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="1dp"
                        android:text="Variable pay includes performance based case incentivies and bonous"
                        android:textColor="@color/lightsblack"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/job_variable_pay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="e.g. 5.2"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Other Incentives (optional)"
                        android:textColor="@color/black_brown"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="1dp"
                        android:text="Variable pay includes performance based case incentivies and bonous"
                        android:textColor="@color/lightsblack"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/job_other_insentive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="e.g. 5.2"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Website"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />


                    <EditText
                        android:id="@+id/job_website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="https://abc.com"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/job_pop_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="This job has a probation period"
                    android:textColor="@color/black_brown"
                    android:textSize="@dimen/_13sdp" />



                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/pop_linar_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_regular"
                        android:letterSpacing="0.1"
                        android:lineSpacingExtra="1dp"
                        android:text="POP in Months"
                        android:textColor="@color/lightsblack"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/job_pop_months"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="3 Months"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Perks(optional)"
                        android:textColor="@color/black_brown"
                        android:textSize="@dimen/_13sdp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/job_5day_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 days a week"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/job_health_chackbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Health insurance"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/job_lifeinsurance_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Life incurance"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


