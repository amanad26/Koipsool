<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.resume.AddResumeSkillActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/skill_linar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/skill_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/boardergraybackground"
                android:fontFamily="@font/roboto_medium"
                android:hint="Search Skill"
                android:paddingHorizontal="@dimen/_8sdp"
                android:paddingVertical="@dimen/_10sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/skill_recycler"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rating_linear"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:text="sdjkaahjdhadhydhdidudhdjkhsd"
                android:textColor="@color/edttxt_color"
                android:textSize="@dimen/_13sdp" />



            <TextView
                android:id="@+id/skill_beginner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/roboto_medium"
                android:text="Beginner"
                android:gravity="center_horizontal"
                android:background="@drawable/skill_bg"
                android:padding="@dimen/_13sdp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/skill_intermediate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/skill_bg"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/_13sdp"
                android:gravity="center_horizontal"
                android:text="Intermediate"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_15sdp" />


            <TextView
                android:id="@+id/skill_advamced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/skill_bg"
                android:fontFamily="@font/roboto_medium"
                android:padding="@dimen/_13sdp"
                android:gravity="center_horizontal"
                android:text="Advanced"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_15sdp" />


        </LinearLayout>


    </LinearLayout>




</androidx.core.widget.NestedScrollView>