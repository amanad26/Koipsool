<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_text"
                android:text="Get 100% Guaranteed Intership UI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_2sdp"
                android:background="@color/white"
                android:textFontWeight="600"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <TextView
                android:id="@+id/company_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:layout_margin="@dimen/_2sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:textFontWeight="400"
                android:textColor="@color/light_black"
                android:text="4 AM Worldwide Advertising"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/city_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:fontFamily="@font/roboto_regular"
                android:padding="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:text="    Delhi , jaipur "
                android:textColor="@color/light_black"
                android:textFontWeight="400"
                android:textSize="@dimen/_12sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/price_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:drawableLeft="@drawable/ic_baseline_money_24"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_6sdp"
                    android:text="3.36 LPA"
                    android:textColor="@color/light_black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:id="@+id/duration_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_calenders"
                    android:fontFamily="@font/roboto_regular"
                    android:padding="@dimen/_1sdp"
                    android:drawablePadding="@dimen/_6sdp"
                    android:text="3.36 LPA"
                    android:textColor="@color/light_black"
                    android:textFontWeight="400"
                    android:textSize="@dimen/_11sdp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/custom_bg_butnn"
                android:gravity="center"
                android:paddingVertical="@dimen/_3sdp">

                <TextView
                    android:id="@+id/type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:text="Fresher Job"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>


            <TextView
                android:id="@+id/create_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="3 Weeks ago"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/total_applicants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:text="3 Weeks ago"
                android:textSize="@dimen/_11sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:id="@+id/application_received"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdpq"
                    android:layout_weight="1"
                    android:background="@drawable/greenboarder"
                    android:drawablePadding="@dimen/_5sdpq"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_4sdp"
                    android:text=" View Application(4)"
                    android:textColor="#36B558"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:drawableRight="@drawable/ic_baseline_navigate_next_24"
                    android:gravity="center"
                    android:text="Know More"
                    android:textColor="@color/ightblue"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>