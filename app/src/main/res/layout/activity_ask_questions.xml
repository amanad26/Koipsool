<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.medical.AskQuestionsActivity">

    <LinearLayout
        android:paddingTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/_8sdp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/_20sdp"
            android:fontFamily="@font/roboto_medium"
            android:text="Login to Continue"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="@dimen/_20sdp" />

        <View
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#AEA5A5A5"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto_medium"
                android:text="Cover Letter"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/question_1_tv"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto_medium"
                android:text="Why should you be hired for this role?"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/copy_cover_letter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:drawableLeft="@drawable/ic_content_copy"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@color/colorPrimary"
                android:layout_marginTop="@dimen/_9sdp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/copy_from_your_last_application"
                android:textColor="@color/colorPrimary"
                android:textFontWeight="600"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:background="@drawable/proceed_applcation_bg"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

              <LinearLayout
                  android:id="@+id/show_hint_linear"
                  android:paddingHorizontal="@dimen/_10sdp"
                  android:paddingVertical="@dimen/_10sdp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <ImageView
                      android:layout_marginStart="@dimen/_3sdp"
                      android:layout_width="@dimen/_15sdp"
                      android:layout_height="@dimen/_15sdp"
                      android:layout_gravity="center_vertical"
                      android:src="@drawable/bulb"/>

                  <TextView
                      android:layout_weight="1"
                      android:layout_marginStart="@dimen/_8sdp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="start"
                      android:drawablePadding="@dimen/_5sdp"
                      android:drawableTint="@color/colorPrimary"
                      android:fontFamily="@font/roboto_medium"
                      android:text="See tips to answer this question"
                      android:textColor="@color/cp_text"
                      android:textFontWeight="600"
                      android:textSize="@dimen/_12sdp" />

                  <ImageView
                      android:id="@+id/arrow_image"
                      android:layout_width="@dimen/_20sdp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                      app:tint="@color/colorPrimary" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/hint_liner"
                    android:paddingBottom="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <View
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/cp_text"/>

                    <TextView
                        android:id="@+id/highlight_tv"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#171717"
                        android:text="fddfff"
                        android:textSize="@dimen/_12sdp" />



                    <TextView
                        android:id="@+id/show_enthusiasm"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#171717"
                        android:text="Highlight your strengths -   mention any experience (internships/job experience or extra-curricular activities), accomplishments,skills that are relevant to this role "
                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:id="@+id/do_not_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:text="Highlight your strengths -   mention any experience (internships/job experience or extra-curricular activities), accomplishments,skills that are relevant to this role "
                        android:textColor="#171717"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               >

                <EditText
                    android:id="@+id/answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.1"
                    android:background="@drawable/boardergraybackground"
                    android:padding="@dimen/_10sdp"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="1dp"
                    android:hint="Answer"
                    android:textColor="@color/lightsblack"
                    android:textSize="@dimen/_13sdp" />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto_medium"
                android:text="Availability"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/question_2_tv"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto_medium"
                android:text="Are you available for starting immediately, for a full time work from home / in office internship/job ? if not , what the time period you are available for and the earliest date you can start this internship/job  on?  "
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.1"
                    android:background="@drawable/boardergraybackground"
                    android:padding="@dimen/_10sdp"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="1dp"
                    android:hint="Answer"
                    android:textColor="@color/lightsblack"
                    android:textSize="@dimen/_13sdp" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/questions_3"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/question_3_tv"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto_medium"
                android:text="Are you available for starting immediately, for a full time work from home / in office internship/job ? if not , what the time period you are available for and the earliest date you can start this internship/job  on?  "
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/answer_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.1"
                    android:background="@drawable/boardergraybackground"
                    android:padding="@dimen/_10sdp"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="1dp"
                    android:hint="Answer"
                    android:textColor="@color/lightsblack"
                    android:textSize="@dimen/_13sdp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/questions_4"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/question_4_tv"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto_medium"
                android:text="Are you available for starting immediately, for a full time work from home / in office internship/job ? if not , what the time period you are available for and the earliest date you can start this internship/job  on?  "
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/answer_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.1"
                    android:background="@drawable/boardergraybackground"
                    android:padding="@dimen/_10sdp"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="1dp"
                    android:hint="Answer"
                    android:textColor="@color/lightsblack"
                    android:textSize="@dimen/_13sdp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/questions_5"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/question_5_tv"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/roboto_medium"
                android:text="Are you available for starting immediately, for a full time work from home / in office internship/job ? if not , what the time period you are available for and the earliest date you can start this internship/job  on?  "
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <EditText
                    android:id="@+id/answer_5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:letterSpacing="0.1"
                    android:background="@drawable/boardergraybackground"
                    android:padding="@dimen/_10sdp"
                    android:gravity="start"
                    android:inputType="textMultiLine"
                    android:lineSpacingExtra="1dp"
                    android:hint="Answer"
                    android:textColor="@color/lightsblack"
                    android:textSize="@dimen/_13sdp" />


            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/submit_application"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdpq"
            android:layout_weight="1"
            android:background="@drawable/bluebackground"
            android:drawablePadding="@dimen/_5sdpq"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:padding="@dimen/_12sdp"
            android:text="Submit Application"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>