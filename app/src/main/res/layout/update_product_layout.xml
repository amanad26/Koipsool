<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="Product "
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/product_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="Description "
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:drawableLeft="@drawable/rupee_small"
                        android:drawablePadding="@dimen/_5sdp"
                        android:id="@+id/product_mrp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="MRP "
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/product_batch_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="Batch Number  "
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <EditText
                        android:id="@+id/product_hsn_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="HSN Code"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/product_expire_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_8sdp"
                        android:background="@drawable/boardergraybackground"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="Expire Date"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp" />

                    <RelativeLayout
                        android:background="@drawable/boardergraybackground"
                        android:layout_width="match_parent"
                        android:padding="@dimen/_2sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:layout_height="@dimen/_40sdp">


                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/category_spiner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:outlineSpotShadowColor="@color/black"
                            android:paddingLeft="@dimen/_15sdp"
                            android:textSize="@dimen/_13sdp"
                            app:ms_hint="Available for" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:background="@drawable/boardergraybackground"
                        android:layout_width="match_parent"
                        android:padding="@dimen/_2sdp"
                        android:layout_margin="@dimen/_8sdp"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:layout_height="@dimen/_40sdp">


                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/product_tax_class"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:outlineSpotShadowColor="@color/black"
                            android:paddingLeft="@dimen/_15sdp"
                            android:textSize="@dimen/_13sdp"
                            app:ms_hint="Tax Class" />

                    </RelativeLayout>

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/update_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:backgroundTint="@color/ightblue"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_25sdp">

                    <TextView
                        android:padding="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Update Product"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>